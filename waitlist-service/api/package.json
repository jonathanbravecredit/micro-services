{
  "name": "api",
  "version": "0.1.0",
  "description": "A TypeScript starter for Serverless Framework",
  "main": "handler.js",
  "scripts": {
    "test": "serverless-bundle test",
    "testWatch": "serverless-bundle test --watchAll --verbose",
    "testCoverage": "serverless-bundle test --coverage",
    "testOpenHandles": "serverless-bundle test --detectOpenHandles"
  },
  "jest": {
    "moduleNameMapper": {
      "libs(.*)$": "<rootDir>/libs/$1",
      "src(.*)$": "<rootDir>/src/$1",
      "tests(.*)$": "<rootDir>/tests/$1"
    }
  },
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AnomalyInnovations/serverless-typescript-starter.git"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.100",
    "@types/jest": "^28.1.1",
    "serverless-bundle": "^5.3.0",
    "serverless-deployment-bucket": "^1.6.0",
    "serverless-dotenv-plugin": "^4.0.1",
    "serverless-offline": "^8.8.0"
  },
  "dependencies": {
    "@shiftcoders/dynamo-easy": "^7.1.0",
    "reflect-metadata": "^0.1.13"
  }
}
